{
  "env": {
    "production": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "modules": false,
            "useBuiltIns": "entry"
          }
        ]
      ],
      "plugins": [
        ["@babel/plugin-transform-runtime", {
          "useESModules": true
        }],
        ["@babel/plugin-proposal-class-properties", { 
          "loose": false 
        }],
        "@babel/plugin-syntax-dynamic-import",
        "lodash"
      ]
    },
    "test": {
      "presets": [
        "@babel/preset-env"
      ],
      "plugins": [
        "@babel/plugin-transform-runtime",
        ["@babel/plugin-proposal-class-properties", { 
          "loose": false 
        }],
        "lodash"
      ]
    }
  }
}
